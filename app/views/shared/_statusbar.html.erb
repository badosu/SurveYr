<div class="statusbar">
  <% if current_user %>
    <%= current_user.name %>
    <%= link_to 'Account', user_path(current_user) %>
    <%= link_to 'New Survey' %>
    <%= link_to 'Logout', logout_url %>
  <% else %>
    <%= link_to 'Login', login_url %> or <%= link_to 'Sign up!', new_user_path %>
  <% end %>
</div>

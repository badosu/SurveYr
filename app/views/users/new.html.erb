<% title 'Sign up' %>
<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

<%= simple_form_for @user, :html => {:multipart => true} do |f|%>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :image, :as => :file %>
  <%= f.button :submit %>
<% end %>
